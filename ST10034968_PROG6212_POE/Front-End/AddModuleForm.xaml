<Window x:Class="ST10034968_PROG6212_POE.Front_End.AddModuleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10034968_PROG6212_POE.Front_End"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Add Module" Height="400" Width="800">
    <Grid Background="#2E282A" Height="390" VerticalAlignment="Top" Margin="0,0,0,0">
        <Label x:Name="lblTitle" Content="Add a Module" HorizontalAlignment="Center" Style="{StaticResource title}" Margin="0,45,0,0" VerticalAlignment="Top">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.237"/>
                    <GradientStop Color="#FF9B7DBB" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Ellipse HorizontalAlignment="Left" Height="225" Margin="-51,-49,0,0" VerticalAlignment="Top" Width="225">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="135" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FF84A9C0" Offset="1"/>
                    <GradientStop Color="#FF7D55A6" Offset="0"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Label x:Name="label" Content="+" HorizontalAlignment="Left" Margin="51,-38,0,0" VerticalAlignment="Top" Foreground="#FF2E282A" FontSize="150" FontFamily="Comic Sans MS" Height="188" Width="98"/>
        <Label x:Name="label1" Content="Module Name:" HorizontalAlignment="Left" Style="{StaticResource defaultLbl}" Margin="263,125,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Module Code:" HorizontalAlignment="Left" Style="{StaticResource defaultLbl}" Margin="268,161,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Number of Credits:" HorizontalAlignment="Left" Style="{StaticResource defaultLbl}" Margin="233,197,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Class Hours Per Week:" HorizontalAlignment="Left" Style="{StaticResource defaultLbl}" Margin="212,228,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbModName" HorizontalAlignment="Left" Margin="434,127,0,0" Style="{StaticResource defaultTxb}" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="txbModCode" HorizontalAlignment="Left" Margin="434,164,0,0" Style="{StaticResource defaultTxb}" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
        <TextBox x:Name="txbNumOfCredits" HorizontalAlignment="Left" Margin="434,200,0,0" Style="{StaticResource defaultTxb}" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
        <TextBox x:Name="txbClassHoursPerWeek" HorizontalAlignment="Left" Margin="434,231,0,0" Style="{StaticResource defaultTxb}" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Center" Style="{StaticResource mostProminentBtn}" Margin="0,284,0,0" VerticalAlignment="Top" Click="btnAdd_Click" />
        <Label x:Name="lblError" Style="{StaticResource errorLbl}" HorizontalAlignment="Center" Margin="0,337,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
