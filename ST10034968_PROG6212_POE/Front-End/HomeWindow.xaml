<Window x:Class="ST10034968_PROG6212_POE.Front_End.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10034968_PROG6212_POE.Front_End"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <Grid Background="#2E282A">
        <Ellipse HorizontalAlignment="Center" Height="246" Stroke="Black" VerticalAlignment="Top" Width="436" Margin="0,-129,0,0">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFD7999E"/>
                    <GradientStop Color="#FFB3CBB9" Offset="1"/>
                    <GradientStop Color="#FF7D55A6" Offset="0.33"/>
                    <GradientStop Color="#FF84A9C0" Offset="0.66"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Label x:Name="lblTitle" Content="Your Current Semester" Style = "{StaticResource title}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#FF282224" FontSize="32"/>
        <Label x:Name="label1" Content="Duration" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="140,140,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Label" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="140,176,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Label" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="413,198,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Label" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="432,249,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label5" Content="Label" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="335,291,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label6" Content="Label" Style = "{StaticResource defaultLbl}" HorizontalAlignment="Left" Margin="548,291,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
